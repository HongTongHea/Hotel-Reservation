@model Customer
@{
    ViewData["Title"] = "Relax Hotel | បង្កើតអតិថិជន";
}
<div class="modal fade" id="AddCustomer" tabindex="-1" aria-labelledby="AddCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <div class="d-flex align-items-center justify-content-center">
                    <img src="~/img/logo-hotel-bg.png" width="40px" />
                    <h5 class="ms-2">@ViewData["Title"]</h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Customer" method="post" enctype="multipart/form-data">
                    <div class="row fw-bold">
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="FirstName">នាមត្រកូល</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="បញ្ចូលនាមត្រកូល" />
                            </div>
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="LastName">គោត្ដនាម</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                <input asp-for="LastName" type="text" class="form-control"  placeholder="បញ្ចូលគោត្ដនាម"/>
                            </div>
                            <div class="col-12 col-md-6 form-group">
                            <label asp-for="Gender" class="form-label">ភេទ</label>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                            <select asp-for="Gender" class="form-select">
                                    <option value="">ជ្រើសរើសភេទ</option>
                                    <option value="Male">បុរស</option>
                                    <option value="Female">ស្រ្តី</option>
                                </select>
                            </div>
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="Email" class="form-label">អ៊ីម៉ែល</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Email" type="email" class="form-control" placeholder="បញ្ចូល​អ៊ីម៉ែល" />
                            </div>
                             <div class="col-12 col-md-6 form-group">
                                <label asp-for="PhoneNumber">លេខទូរស័ព្ទ</label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="បញ្ចូលលេខទូរស័ព្ទ" />
                            </div>
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="PassportNumber">លេខលិខិតឆ្លងដែន</label>
                                <span asp-validation-for="PassportNumber" class="text-danger"></span>
                                <input asp-for="PassportNumber" type="text" class="form-control" placeholder="បញ្ចូលលេខលិខិតឆ្លងដែន" />
                            </div>
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="Country">ប្រទេស</label>
                                <span asp-validation-for="Country" class="text-danger"></span>
                                <input asp-for="Country" type="text" class="form-control" placeholder="បញ្ចូលប្រទេស" />
                            </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">បិទ</button>
                        <button type="submit" class="btn btn-primary">រក្សាទុក</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
