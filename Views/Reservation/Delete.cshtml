@model Reservation

@{
    ViewData["Title"] = "Relax Hotel | លុបការកក់";
}

<div class="card mt-2 mb-4">
    <div class="card-header bg-dark text-white">
        <div class="d-flex align-items-center justify-content-center">
            <img src="~/img/logo-hotel-bg.png" width="50px" />
            <h4 class="ms-2">@ViewData["Title"]</h4>
        </div>
    </div>
    <div class="card-body fw-bold">
        <h5>Are you sure you want to delete this reservation?</h5>
        <p><strong>Customer:</strong> @Model.Customer.FirstName @Model.Customer.LastName</p>
        <p><strong>Room Number:</strong> @Model.Room.RoomNumber</p>
        <p><strong>Check-in Date:</strong> @Model.CheckInDate.ToShortDateString()</p>
        <p><strong>Check-out Date:</strong> @Model.CheckOutDate.ToShortDateString()</p>

        <form asp-action="ConfirmDelete" asp-route-id="@Model.ReservationID" method="post" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
