@model Room
@{
    ViewData["Title"] = "Relax Hotel | បង្កើតបន្ទប់";
}
<div class="modal fade" id="AddRoom" tabindex="-1" aria-labelledby="AddRoomModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <div class="d-flex align-items-center justify-content-center">
                    <img src="~/img/logo-hotel-bg.png" width="40px" />
                    <h5 class="ms-2">@ViewData["Title"]</h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body fw-bold">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-6">
                            <!-- Room Number -->
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label asp-for="RoomNumber" class="form-label">លេខបន្ទប់</label>
                                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                                    <input asp-for="RoomNumber" class="form-control" placeholder="បញ្ចូលលេខបន្ទប់" />
                                </div>
                                <div class="col-md-6 form-group">
                                    <label asp-for="RoomType" class="form-label">ប្រភេទបន្ទប់</label>
                                    <span asp-validation-for="RoomType" class="text-danger"></span>
                                    <select asp-for="RoomType" class="form-select form-control">
                                        <option value="">ជ្រើសរើសប្រភេទបន្ទប់</option>
                                        <option value="Single">បន្ទប់តែមួយ</option>
                                        <option value="Double">បន្ទប់ពីរ</option>
                                        <option value="Suite">បន្ទប់ជាឈុត</option>
                                    </select>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label asp-for="AvailabilityStatus" class="form-label">ស្ថានភាពបន្ទប់</label>
                                    <span asp-validation-for="AvailabilityStatus" class="text-danger"></span>
                                    <select asp-for="AvailabilityStatus" class="form-select form-control">
                                        <option value="">ជ្រើសរើសស្ថានភាពបន្ទប់</option>
                                        <option value="Available">មាន</option>
                                        <option value="Booked">បានកក់</option>
                                    </select>
                                </div>


                                <div class="col-md-6 form-group">
                                    <label asp-for="Floor" class="form-label">ជាន់បន្ទប់</label>
                                    <span asp-validation-for="Floor" class="text-danger"></span>
                                    <input asp-for="Floor" type="number" class="form-control" placeholder="បញ្ចូលជាន់បន្ទប់" />
                                </div>

                                <div class="col-md-6 form-group">
                                    <label asp-for="BedCount" class="form-label">ចំនួនគ្រែ</label>
                                    <span asp-validation-for="BedCount" class="text-danger"></span>
                                    <input asp-for="BedCount" type="number" class="form-control" placeholder="បញ្ចូលចំនួនគ្រែ" />
                                </div>

                    
                                <div class="col-md-6 form-group">
                                    <label asp-for="RoomPrice" class="form-label">តម្លៃបន្ទប់</label>
                                    <span asp-validation-for="RoomPrice" class="text-danger"></span>
                                    <input asp-for="RoomPrice" class="form-control" placeholder="បញ្ចូលតម្លៃបន្ទប់" />
                                </div>

                                <div class="col-md-12 form-group">
                                    <label asp-for="Description" class="form-label">ការពិពណ៌នា</label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                </div>
                            </div>
                          
                        </div>
    
                        <div class="col-6">
                            <div class="col-md-12 form-group">
                                <label for="pictureFile" class="form-label">បញ្ចូលរូបភាព</label>
                                <input type="file" name="pictureFile" id="pictureFile" class="form-control d-none" accept="image/*" onchange="showPreview(event)" />
                                <div id="preview" onclick="triggerFileInput()" style="cursor: pointer;">
                                    <img src="/img/default-img.png" alt="Default Image" class="img-thumbnail" style="width: 350px; height: 350px; object-fit: cover;" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer mt-4">
                        <a class="btn btn-danger text-white" data-bs-dismiss="modal">បិទ</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function triggerFileInput() {
        document.getElementById('pictureFile').click();
    }

    function showPreview(event) {
        var file = event.target.files[0];
        var reader = new FileReader();
        var output = document.getElementById('preview').getElementsByTagName('img')[0];
        if (file) {
            reader.onload = function () {
                output.src = reader.result;
            };
            reader.readAsDataURL(file);
        } else {
            output.src = "/img/default-img.png";
        }
    }
</script>
